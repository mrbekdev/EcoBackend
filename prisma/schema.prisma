generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum UserRole {
    admin
    user
    collection_point
    factory
}

model User {
    id           String        @id @default(uuid())
    username     String        @unique
    password     String
    role         UserRole
    balance      Int           @default(0)
    name         String?
    location     String?
    createdAt    DateTime      @default(now())
    transactions Transaction[]
    wasteReports WasteReport[]
}

model WasteReport {
    id              String   @id @default(uuid())
    location        String
    description     String?
    photoUrl        String?
    wasteType       String
    estimatedWeight Float?
    createdAt       DateTime @default(now())
    user            User     @relation(fields: [userId], references: [id])
    userId          String
}

model Transaction {
    id          String   @id @default(uuid())
    amount      Int
    description String?
    createdAt   DateTime @default(now())
    user        User     @relation(fields: [userId], references: [id])
    userId      String
}
